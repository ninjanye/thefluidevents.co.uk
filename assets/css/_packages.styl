.packages_content
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-content: stretch

.packages_content a.package
  background-color: $colour_three
  border: solid 1px $colour_one
  // border-radius: 5px
  margin: 20px 10px
  display: flex
  flex-direction: column
  text-decoration: none
  color: $primary_colour_dark

.packages_content .package h3
  margin: 0
  padding: 10px
  text-align: center
  text-transform: capitalize
  background-color: $colour_three
  color: $colour_one

.packages_content .package ul
  padding: 20px 20px
  flex-grow: 1
  margin: 0

.packages_content .package ul li
  font-style: italic
  list-style: none
  margin: 5px 0

ul li span.green
  color: green
  margin-right: 10px

.packages_content .package .most_popular .heart
  padding: 0 5px
  color: red

.packages_content .package .most_popular
  background-color: $colour_two
  color: $primary_colour_dark
  padding: 5px 10px
  text-align: center

.packages_content .package .cta
  // display: flex
  background-color: $colour_one
  padding: 10px
  align-items: center
  color: white
  font-weight: bold

.packages_content .package .cta div 
  // flex-basis: 50%
  text-align: center

.packages_content .package .price
  font-size: 20px
  font-weight: bold
  background-color: white
  text-align: center
  padding: 5px

.packages_content .package .cta .enquire .btn
  background-color: $colour_one
  color: white

.packages_content .package .cta .enquire a:hover
  background-color: blue

@media only screen and (max-width: $mobile_width)
  .package
    flex-basis: 100%
