.packages_wrapper
  background-color: #fddee2

.packages_content
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-content: stretch

.packages_content .package
  background-color: $primary_colour_light
  border: solid 2px silver
  border-radius: 5px
  margin: 20px 10px
  display: flex
  flex-direction: column

.packages_content .package h3
  margin: 0
  padding: 10px
  text-align: center
  text-transform: capitalize
  background-color: white

.packages_content .package ul
  padding: 20px 20px
  flex-grow: 1
  margin: 0

.packages_content .package ul li
  font-style: italic
  list-style: none
  margin: 5px 0

ul li span.green
  color: green
  margin-right: 10px

.packages_content .package .most_popular .heart
  padding: 0 5px

.packages_content .package .most_popular
  background-color: red
  color: white
  padding: 5px 10px
  text-align: center

.packages_content .package .cta
  display: flex
  background-color: white
  padding: 10px
  align-items: center

.packages_content .package .cta div 
  flex-basis: 50%

.packages_content .package .cta .price
  font-size: 20px
  font-weight: bold

.packages_content .package .cta .enquire
  text-align: right

.packages_content .package .cta .enquire a:hover
  background-color: blue

@media only screen and (max-width: $mobile_width)
  .package
    flex-basis: 100%
