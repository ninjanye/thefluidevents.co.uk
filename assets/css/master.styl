@import '_settings'

normalize-css()
base()

$primary_colour_dark = #4f5358  
$primary_colour_light = #ecece7
$page-width = 980px;

body
  display: -webkit-flex;
  display: flex
  -webkit-flex-direction: column
  flex-direction: column
  align-items: center

@import '_header'

.hero
  min-height: 600px
  width: 100%
  background: url('/img/home_hero.jpg') no-repeat
  background-size: cover
  background-position: center
  display: flex
  align-items: center
  justify-content: center

.hero img
  max-height: 400px
  width: 100%
  margin: auto 20px

@media only screen and (max-width: 639px)
  .hero
    min-height: 300px
