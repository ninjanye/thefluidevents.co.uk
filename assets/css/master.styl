@import '_settings'

normalize-css()
base()

$font-size-large = 22px
$font-size-small = 12px
$primary_colour_dark = #4f5358
$primary_colour_light = #ecece7
$page_width = 980px;
$mobile_width = 639px

body, main
  display: flex
  flex-direction: column
  align-items: center

main,
.full-width
  width: 100%

.page-width
  max-width $page_width
  width: 100%

h1
  font-size: 34px
  text-transform: capitalize
  text-align: center
  margin: 20px 0;

.section_header
  width: 100%
  margin: 20px 0 10px

.section_header h1
  border-bottom: 1px solid #AAA
  line-height: 0.1em

.section_header h1 span
  background-color: #fff
  padding: 0 40px

.section_info
  text-align: center
  padding-bottom: 20px;

.bold
  font-weight: bold

a.btn
  padding: 5px
  background-color: navy
  color: white
  text-transform: capitalize
  text-decoration: none
  border-radius: 3px  

a.btn:after
  content: '>'
  padding-left: 5px

@import '_header'
@import '_hero'
@import '_callout'
@import '_about'
@import '_promo'

.packages_wrapper
  background-color: #fddee2

.packages_content
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-content: stretch

.packages_content .package
  background-color: $primary_colour_light
  border: solid 2px silver
  border-radius: 5px
  margin: 20px 10px
  display: flex
  flex-direction: column

.packages_content .package h3
  margin: 0
  padding: 10px
  text-align: center
  text-transform: capitalize
  background-color: white

.packages_content .package ul
  padding: 20px 20px
  flex-grow: 1
  margin: 0

.packages_content .package ul li
  font-style: italic
  list-style: none
  margin: 5px 0

ul li span.green
  color: green
  margin-right: 10px

.packages_content .package .most_popular .heart
  padding: 0 5px

.packages_content .package .most_popular
  background-color: red
  color: white
  padding: 5px 10px
  text-align: center

.packages_content .package .cta
  display: flex
  background-color: white
  padding: 10px
  align-items: center

.packages_content .package .cta div 
  flex-basis: 50%

.packages_content .package .cta .price
  font-size: 20px
  font-weight: bold

.packages_content .package .cta .enquire
  text-align: right

.packages_content .package .cta .enquire a:hover
  background-color: blue

@media only screen and (max-width: $mobile_width)
  .package
    flex-basis: 100%

@media only screen and (max-width: $mobile_width)
  .hide_mobile
    display: none