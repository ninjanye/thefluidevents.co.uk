.callouts
  min-height: 200px
  display: flex
  flex-wrap: wrap

.callouts a.callout
  flex-grow: 1
  text-align: center
  text-decoration: none
  color: $primary_colour_dark

.callouts .callout .title
  text-transform: uppercase
  font-weight: bolder
  font-size: $font-size-large
  letter-spacing: 3px

.callouts .callout__social .title
  color: white

.callout__gallery,
.callout__packages
  color: $primary_colour_dark

.callout__events
  background-color: $colour_one
  display: none

.callout__packages
  background-color: $colour_two

.callout__gallery
  background-color: $colour_three

.callout__contact
  background-color: $colour_four

.callout__contact .title
  color: white

.callout__facebook
  background-color: #3A559F

.callout__insta
  background-color: #C536A4

.callout__twitter
  background-color: #50ABF1

.callout__google
  background-color: #DD4B39

.callout object,
.callout img
  padding-top: 20px
  padding-bottom: 20px
  max-height: 100px
  max-width: 100px

.callout .title
  padding-bottom: 10px

@media only screen and (max-width: $mobile_width)
  .callouts
    min-height: 50px

  .callout
    flex-basis: 80%
  
  .callout__social
    flex-basis: 50%