.about_header
  width: 100%
  margin: 20px 0 10px

.about_header h1
  border-bottom: 1px solid #AAA
  line-height: 0.1em

.about_header h1 span
  background-color: #fff
  padding: 0 40px

.about_content
  text-align: center
  max-width: 650px
  margin-bottom: 30px;

@media only screen and (max-width: $mobile_width)
  .about_content p
    padding: 0 30px