.header_container
  display: flex
  align-items: center
  flex-wrap: wrap

.header_container__logo
  flex-grow: 1
  padding-left: 20px;  

.header_container__logo img
  height: 60px

.header_container nav
  display: flex
  flex-grow: 1; 
  flex-flow: row wrap
  justify-content: flex-end

.header_container nav a
  font-size: $font-size-large
  color: black
  text-decoration: none
  padding: 5px 15px

.header_container nav a .ico
  margin-right: 10px

@media only screen and (max-width: 639px)
  .header_container__logo
    display: none
