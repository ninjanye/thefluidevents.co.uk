.blog_content
  display: flex
  flex-wrap: wrap
  width: 100%

.blog_text
  flex: 2 1 
  margin: 10px

.blog_image
  margin-top: 10px
  flex: 1 1
  background-position: center
  background-repeat: no-repeat
  background-size: cover  

@media only screen and (max-width: $mobile_width)
  .about_content p
    padding: 0 30px

  .blog_image
    display: none
