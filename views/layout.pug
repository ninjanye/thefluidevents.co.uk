doctype html
html
  head
    block meta
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
      meta(name='description' content='description of your site')
      meta(name='author' content='ninjanye')
      meta(name="viewport" content="width=device-width, initial-scale=1")

    block title
      title Mobile Bar | Prosecco Van | The Fluid Events Co.

    block stylesheets
      link(rel='stylesheet' href='css/master.css')

  body(role='document')
    block header
      -var selected = "Home"

    -var menu = { 'Home': '/', 'Packages': '/#packages', 'Gallery': '/#gallery', 'Contact Us': '/#contact' };
    .header_container.page-width
      .header_container__logo
        img(src="/img/logo_wide_dark.svg", alt="The Fluid Events Company Logo")
      nav
        each val, key in menu  
          if selected === key
            a.selected(href=val, title=key)= key
          else 
            a(href=val, title=key)= key
            
    main(role='main')
      block content

    footer
      .copyright Â© 2017 by The Fluid Events Essex Company
      .social
        .facebook [FB]
        .instagram [IG]
        .twitter [TW]
        .google [G+]

    block javascript
      script(src='js/main.js' defer)