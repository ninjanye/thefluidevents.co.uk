extends layout

block content
  .hero.lazy(data-src='/img/home_hero.jpg')
    img(src="/img/logo_wide_light.svg" alt="The Fluid Events Company Logo")

  include _callouts

  a#about(visibility="hidden")
  include _about

  include _promo

  a#packages(visibility="hidden")
  include _packages

  a#contact(visibility="hidden")
  include _contact

  #gallery.section_header
    h1 
      span gallery

  .section_info.page-width
    p 
      span Here are some of our favourite images of our mobile prosecco van and the Fluid Events Team.

    p.cta
      a.btn(href="https://www.instagram.com/fluideventsco/") View more on our instagram page

  .gallery.page-width.masonry
    .item
      img.lazy(data-src="/img/doors_open.jpg", alt="open door prosecco van")
    .item
      img.lazy(data-src="/img/feco_team.jpg", alt="The Fluid Events team")
    .item
      img.lazy(data-src="/img/oldskool_tuktuk.jpg", alt="Driving the mobile bar")
    .item
    .item
      img.lazy(data-src="/img/feco_glasses.jpg", alt="tuk tuk")
    .item
      img.lazy(data-src="/img/first_glass.jpg", alt="tuk tuk")

  #instafeed